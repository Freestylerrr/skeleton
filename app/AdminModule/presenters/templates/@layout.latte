        <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">{$user->identity->name} {$user->identity->surname} 
            
        <span class="caret"></span></button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
